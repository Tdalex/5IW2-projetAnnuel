{% extends 'AppBundle::base.html.twig' %}


{% block body %}
    <div class="container">
        <div class="row">
            <div class="col s12 m8 offset-m2 l6 offset-l3">
                <h1 class="center-align">Inscription</h1>
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                {{ form_errors(form) }}
                {% for field in form %}
                    {% if field.vars.errors|length > 0 %}
                        <ul class="form-errors name">
                            {% for error in field.vars.errors %}
                                <p> {{ error.message }} </p>
                            {% endfor %}
                        </ul>
                    {% endif %}
                {% endfor %}
                <div class="center-align">
                    {{ form_errors(form.gender) }}
                    {{ form_widget(form.gender) }}
                </div>
                <div>
                    {{ form_errors(form.lastName) }}
                    {{ form_row(form.lastName) }}
                </div>
                <div>
                    {{ form_errors(form.firstName) }}
                    {{ form_row(form.firstName) }}
                </div>
                <div>
                    {{ form_errors(form.email) }}
                    {{ form_row(form.email) }}
                </div>
                <div>
                    {{ form_errors(form.birthdate) }}
                    {{ form_row(form.birthdate) }}
                </div>
                <div>
                    {{ form_errors(form.plainPassword) }}
                    {{ form_row(form.plainPassword) }}
                </div>

                <div class="center-align">
                    <button class="btn waves-effect waves-light" type="submit" name="action">{{ 'security.register.sumbit'|trans }}
                        <i class="material-icons right">send</i>
                    </button>
                </div>

                <script>
                    $(document).ready(function() {
                        // configure the bootstrap datepicker
                        $('.js-datepicker').datepicker({
                            format: 'yyyy-mm-dd'
                        });
                    });

                    $(document).on('click', '#_export', function(e) {
                        window.location.replace("export?" + $('#form-user').serialize());
                    })
                </script>
                {{ form_end(form) }}
            </div>
        </div>
        <div class="right-align">
            <a href="{{ path('roadtrip_index') }}">Retour Ã  l'accueil</a>
        </div>
    </div>
{% endblock %}



