{% extends 'AppBundle:default:layout.html.twig' %}

{% block content %}

    {{ render(controller('AppBundle:Roadtrip:new')) }}

    <h1>Roadtrips list</h1>

    <table id="roadtrip_list">
        <thead>
            <tr>
                <th>Départ</th>
                <th>Arrivée</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Durée (en jours)</th>
                <th>Nombre d'étapes intermédiaires</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for roadtrip in roadtrips %}
            <tr>
                <td>{% if roadtrip.stopStart %}{{ roadtrip.stopStart.address }}{% else %}N/A{% endif %}</td>
                <td>{% if roadtrip.stopEnd %}{{ roadtrip.stopEnd.address }}{% else %}N/A{% endif %}</td>
                <td>{{ roadtrip.title }}</td>
                <td>{{ roadtrip.description }}</td>
                <td>{{ roadtrip.duration }}</td>
                <td>{% if roadtrip.stops|length == 0 %}0{% else %}{{ roadtrip.stops|length-2 }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('roadtrip_show', { 'slug': roadtrip.slug }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('roadtrip_edit', { 'slug': roadtrip.slug }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('roadtrip_new') }}">Create a new roadtrip</a>
        </li>
    </ul>

{% endblock %}

