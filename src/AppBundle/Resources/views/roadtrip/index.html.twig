{% extends 'base.html.twig' %}

{% block stylesheets %}
    {% stylesheets
        '@AppBundle/Resources/public/css/style.css'
        '@AppBundle/Resources/public/css/bootstrap.min.css'
        '@AppBundle/Resources/public/css/bootstrap-theme.min.css'
        '@AppBundle/Resources/public/css/jquery.dataTables.min.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}
{% endblock %}

{% block body %}

    {{ render(controller('AppBundle:Roadtrip:new')) }}

    <h1>Roadtrips list</h1>

    <table id="roadtrip_list">
        <thead>
            <tr>
                <th>Départ</th>
                <th>Arrivée</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Durée (en jours)</th>
                <th>Nombre d'étapes intermédiaires</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for roadtrip in roadtrips %}
            <tr>
                <td>{% if roadtrip.stopStart %}{{ roadtrip.stopStart.address }}{% else %}N/A{% endif %}</td>
                <td>{% if roadtrip.stopEnd %}{{ roadtrip.stopEnd.address }}{% else %}N/A{% endif %}</td>
                <td>{{ roadtrip.title }}</td>
                <td>{{ roadtrip.description }}</td>
                <td>{{ roadtrip.duration }}</td>
                <td>{% if roadtrip.stops|length == 0 %}0{% else %}{{ roadtrip.stops|length-2 }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('roadtrip_show', { 'slug': roadtrip.slug }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('roadtrip_edit', { 'slug': roadtrip.slug }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('roadtrip_new') }}">Create a new roadtrip</a>
        </li>
    </ul>

{% endblock %}


{% block javascripts %}
    {% javascripts
        '@AppBundle/Resources/public/js/jquery-3.2.1.min.js'
        '@AppBundle/Resources/public/js/bootstrap.min.js'
        '@AppBundle/Resources/public/js/googleMap.js'
        '@AppBundle/Resources/public/js/form.js'
        '@AppBundle/Resources/public/js/jquery.dataTables.min.js'
        '@AppBundle/Resources/public/js/configDatatable.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script src="https://maps.googleapis.com/maps/api/js?key={{ google_api_key }}&callback=myMap&libraries=places&callback=initAutocomplete"></script>
{%  endblock %}

