{% extends 'base.html.twig' %}

{% block stylesheets %}
    {% stylesheets '@AppBundle/Resources/public/css/style.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}
{% endblock %}

{% block body %}


    <body onload="initialize()">
        <div id="googleMap"></div>
        <div id="search">
            <label>Départ de</label>
            <input id="addressDep" type="text" name="city" value="Paris, France">
            <label>Destination</label>
            <input id="addressDes" type="text" name="city" value="Marseille, France">
            <!-- Ajout des input -->
            <div id="container"></div>
            <button id="filldetails" onclick="addFields()">Ajouter une étape</button>
            <button onclick="codeAddress()">Chercher</button>

            <div id="directions-panel"></div>
        </div>
        <div id="listing">
            <table id="resultsTable">
                <tbody id="results"></tbody>
            </table>
        </div>
    </body>

    <h1>Roadtrips list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Slug</th>
                <th>Title</th>
                <th>Description</th>
                <th>Createdat</th>
                <th>Isremoved</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for roadtrip in roadtrips %}
            <tr>
                <td><a href="{{ path('roadtrip_show', { 'slug': roadtrip.slug }) }}">{{ roadtrip.slug }}</a></td>
                <td>{{ roadtrip.slug }}</td>
                <td>{{ roadtrip.title }}</td>
                <td>{{ roadtrip.description }}</td>
                <td>{% if roadtrip.createdAt %}{{ roadtrip.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if roadtrip.isRemoved %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('roadtrip_show', { 'slug': roadtrip.slug }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('roadtrip_edit', { 'slug': roadtrip.slug }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('roadtrip_new') }}">Create a new roadtrip</a>
        </li>
    </ul>

{% endblock %}


{% block javascripts %}
    {% javascripts '@AppBundle/Resources/public/js/googleMap.js'
                   '@AppBundle/Resources/public/js/form.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
