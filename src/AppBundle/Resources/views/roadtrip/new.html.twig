{% extends 'base.html.twig' %}

{% block body %}
    <div id="googleMap"></div>
    <div id="search">
        {{ form_start(form) }}
            <div>
                {{ form_label(form.stopStart) }}
                {{ form_widget(form.stopStart.address, {'id': 'addressDep', 'attr' : {'class': 'autocomplete'}}) }}
                {{ form_widget(form.stopStart.lat) }}
                {{ form_widget(form.stopStart.lon) }}
                {{ form_label(form.stopEnd) }}
                {{ form_widget(form.stopEnd.address, {'id': 'addressDes', 'attr' : {'class': 'autocomplete'}}) }}
                {{ form_widget(form.stopEnd.lat) }}
                {{ form_widget(form.stopEnd.lon) }}
            </div>
            <div>
                {{ form_label(form.title) }}
                {{ form_widget(form.title) }}
            </div>
            <div>
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}
            </div>
            <div>
                {{ form_label(form.duration) }}
                {{ form_widget(form.duration) }}
            </div>
            <button id="filldetails">Ajouter une Ã©tape</button>
            <div id="container-stop">
                {% set prototype_stop = form.stops.vars.prototype %}
                <div id="prototype-stop" class="prototype-stop hide" hidden>
                    <section class="form-group">
                        <div>
                            {{ form_widget(prototype_stop.stopNumber) }}
                            {{ form_widget(prototype_stop.lat) }}
                            {{ form_widget(prototype_stop.lon) }}
                        </div>
                        <div>
                            {{ form_label(prototype_stop.address) }}
                            {{ form_widget(prototype_stop.address) }}
                        </div>
                        <div>
                            {{ form_label(prototype_stop.title) }}
                            {{ form_widget(prototype_stop.title) }}
                        </div>
                        <div>
                            {{ form_label(prototype_stop.description) }}
                            {{ form_widget(prototype_stop.description) }}
                        </div>
                    </section>
                </div>
            </div>
            <div>
                {{ form_row(form.submit) }}
            </div>
        {{ form_end(form, {'render_rest': false}) }}

        <!-- Ajout des input -->
        <button onclick="codeAddress()">Chercher sur la carte</button>

        <div id="directions-panel"></div>
    </div>
{% endblock %}
