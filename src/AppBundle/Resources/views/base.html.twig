<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Roadtripeurs{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% block stylesheets %}
            {% stylesheets
            '@AppBundle/Resources/public/css/style.css'
            '@AppBundle/Resources/public/css/bootstrap.min.css'
            '@AppBundle/Resources/public/css/materialize.min.css'
            '@AppBundle/Resources/public/css/bootstrap-theme.min.css'
            '@AppBundle/Resources/public/min/plugin-min.css'
            '@AppBundle/Resources/public/min/custom-min.css'
            '@AppBundle/Resources/public/css/materialize-social.css'
            '@AppBundle/Resources/public/css/font-awesome.css'
            %}
            <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

            {% endstylesheets %}
        {% endblock %}
    </head>
    <body>
        {% include '@AppBundle/Resources/views/includes/menu.html.twig' %}
        {% block body %}{% endblock %}
        {% block footer %}
            {% include '@AppBundle/Resources/views/includes/footer.html.twig' %}
        {% endblock %}
        {% block javascripts %}
            {% javascripts
            '@AppBundle/Resources/public/js/materialize.min.js'
            '@AppBundle/Resources/public/js/jquery-3.2.1.min.js'
            '@AppBundle/Resources/public/js/bootstrap.min.js'
            '@AppBundle/Resources/public/js/googleMap.js'
            '@AppBundle/Resources/public/js/form.js'
            '@AppBundle/Resources/public/js/app.js'
            %}
            <script src="{{ asset_url }}"></script>
            <script>$('.parallax').parallax();</script>
            <script type="text/javascript">
                if (window.location.hash && window.location.hash == '#_=_') {
                    window.location.href = window.location.href.split('#_=_')[0];
                }
            </script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>
