{% extends 'base.html.twig' %}

{% block stylesheets %}
    {% stylesheets
    '@AppBundle/Resources/public/css/style.css'
    '@AppBundle/Resources/public/css/bootstrap.min.css'
    '@AppBundle/Resources/public/css/bootstrap-theme.min.css'
    '@AppBundle/Resources/public/css/jquery.dataTables.min.css'
    '@AppBundle/Resources/public/css/dataTables.bootstrap4.min.css'
    '@AppBundle/Resources/public/css/scrolling-nav.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />

    {% endstylesheets %}
{% endblock %}

{% block body %}
    <!-- Pre Loader -->
    <div id="loader-wrapper">
        <div id="loader"></div>

        <div class="loader-section section-left"></div>
        <div class="loader-section section-right"></div>

    </div>
    <!--Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark navbar-fixed-top" id="mainNav">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('homepage') }}">RoadTripeurs</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('roadtrip_index') }}">Roadtrips</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Inscription</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Connexion</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    {% block content %}
        {{ render(controller('AppBundle:Roadtrip:accueil')) }}
    {% endblock %}

    <!-- Footer -->
    <footer class="bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">RoadTripeurs</p>
        </div>
        <!-- /.container -->
    </footer>


{% endblock %}


{% block javascripts %}
    {% javascripts
        '@AppBundle/Resources/public/js/jquery-3.2.1.min.js'
        '@AppBundle/Resources/public/js/bootstrap.min.js'
        '@AppBundle/Resources/public/js/googleMap.js'
        '@AppBundle/Resources/public/js/form.js'
        '@AppBundle/Resources/public/js/jquery.dataTables.min.js'
        '@AppBundle/Resources/public/js/dataTables.bootstrap4.min.js'
        '@AppBundle/Resources/public/js/configDatatable.js'
        '@AppBundle/Resources/public/js/scrolling-nav.js'
        '@AppBundle/Resources/public/js/animateTextHomepage.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script src="https://maps.googleapis.com/maps/api/js?key={{ google_api_key }}&callback=myMap&libraries=places&callback=initAutocomplete"></script>
{%  endblock %}

