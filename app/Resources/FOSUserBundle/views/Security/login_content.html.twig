{% extends 'AppBundle::base.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col s12 m8 offset-m2 l6 offset-l3">
            <h1 class="center-align">Connexion</h1>
            <div>
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
            </div>
            <div>
                <div class="row">
                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        <div class="col s12">
                            {% if csrf_token %}
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            {% endif %}
                            <div class="row">
                                <div class="input-field col s12">
                                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="validate"/>
                                    <label for="username">{{ 'security.login.username'|trans }}</label>
                                </div>
                                <div class="input-field col s12">
                                    <input id="password" name="_password" type="password" class="validate" required="required">
                                    <label for="password">{{ 'security.login.password'|trans }}</label>
                                </div>
                                <div class="center-align">
                                    <input type="checkbox" class="filled-in remember_me" id="remember_me" name="_remember_me" checked="checked" />
                                    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                                </div>
                            </div>
                        </div>
                        <div class="center-align">
                            <button class="btn waves-effect waves-light" id="_submit" name="_submit" type="submit" name="action">{{ 'security.login.submit'|trans }}
                                <i class="material-icons right">send</i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}
